# Campaign Generator Environment Variables
# Copy this file to .env and fill in your API keys

# Required: Anthropic Claude API Key for campaign generation
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: OpenAI API Key for image generation
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Database configuration (defaults will work for local development)
DATABASE_URL=postgresql://user:password@localhost:5432/campaign_generator

# Optional: Redis configuration (for caching)
REDIS_URL=redis://localhost:6379

# Optional: JWT Secret for authentication
JWT_SECRET_KEY=your_jwt_secret_key_here

# Optional: Logging level
LOG_LEVEL=INFO
